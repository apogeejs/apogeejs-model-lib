{
    "repoName": "apogeejs-model-lib",

    "esModule": {
        "format": "es",
        "taskList": [
            {
                "type": "copyFileList",
                "srcFileUrlList": [
                    "/apogeejs-model-lib/versionInfo.json"
                ]
            },
            {
                "type": "copyFileList",
                "srcFileUrlList": [
                    "/apogeejs-model-lib/src/debugHook.js",
                    "/apogeejs-model-lib/src/webGlobals.js",
                    "/apogeejs-model-lib/src/nodeGlobals.js"
                ],
                "childFolder": "src"
            },
            {
                "type": "packageLib",
                "esModuleFileName": "apogeeModelLib.js",
                "externalLibs": [
                    "/apogeejs-base-lib/src/apogeeBaseLib.js",
                    "/apogeejs-util-lib/src/apogeeUtilLib.js"
                ]
            }
        ]
    },
    "npmModule": {
        "format": "cjs",
        "taskList": [
            {
                "type": "copyAndReplace",
                "srcFileUrl": "/apogeejs-model-lib/package.json",
                "replacementList": [
                    {
                        "marker": "[RELEASE_VERSION]",
                        "name": "RELEASE_VERSION"
                    }
                ]
            },
            {
                "type": "packageLib",
                "esModuleFileName": "apogeeModelLib.js",
                "npmModuleFileName": "apogee-core-libLib.js",
                "externalLibs": [
                    "/apogeejs-admin/ext/esprima/esprima_2.7.3/esprima.es.js"
                ],
                "externalLibsMapping": {
                    "/apogeejs-admin/ext/esprima/esprima_2.7.3/esprima.es.js": "esprima"
                }
            }
        ]
    }
}